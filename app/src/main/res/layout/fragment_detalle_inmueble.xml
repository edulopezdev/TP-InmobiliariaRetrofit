<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título principal centrado -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Información del inmueble"
        android:textColor="#9C27B0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Código y Ambientes en horizontal -->
    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Código"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvAmbientes"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvAmbientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ambientes"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toEndOf="@id/tvCodigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/tvCodigo"
        app:layout_constraintStart_toStartOf="@id/tvCodigo"
        app:layout_constraintEnd_toEndOf="@id/tvCodigo"
        android:backgroundTint="#9C27B0"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etAmbientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/tvAmbientes"
        app:layout_constraintStart_toStartOf="@id/tvAmbientes"
        app:layout_constraintEnd_toEndOf="@id/tvAmbientes"
        android:backgroundTint="#9C27B0"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <!-- Dirección y Uso en horizontal -->
    <TextView
        android:id="@+id/tvDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etCodigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvUso"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Uso"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etAmbientes"
        app:layout_constraintStart_toEndOf="@id/tvDireccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#9C27B0"
        android:minHeight="40dp"
        android:backgroundTint="#9C27B0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion"
        app:layout_constraintStart_toStartOf="@id/tvDireccion"
        app:layout_constraintEnd_toEndOf="@id/tvDireccion"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#9C27B0"
        android:backgroundTint="#9C27B0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUso"
        app:layout_constraintStart_toStartOf="@id/tvUso"
        app:layout_constraintEnd_toEndOf="@id/tvUso"
        android:layout_marginTop="8dp"/>

    <!-- Precio y Tipo en horizontal -->
    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTipo"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textColor="#9C27B0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etUso"
        app:layout_constraintStart_toEndOf="@id/tvPrecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#9C27B0"
        android:backgroundTint="#9C27B0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPrecio"
        app:layout_constraintStart_toStartOf="@id/tvPrecio"
        app:layout_constraintEnd_toEndOf="@id/tvPrecio"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="#9C27B0"
        android:backgroundTint="#9C27B0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTipo"
        app:layout_constraintStart_toStartOf="@id/tvTipo"
        app:layout_constraintEnd_toEndOf="@id/tvTipo"
        android:layout_marginTop="8dp"/>

    <!-- Imagen central -->
    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Imagen del inmueble"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/etTipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.25"/>

    <!-- Checkbox disponible centrado -->
    <CheckBox
        android:id="@+id/cbDisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponible"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ivFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Botón editar centrado -->
    <Button
        android:id="@+id/btnEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        app:layout_constraintTop_toBottomOf="@id/cbDisponible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
