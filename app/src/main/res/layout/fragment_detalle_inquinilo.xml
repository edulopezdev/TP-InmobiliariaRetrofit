<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTituloInquilino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del inquilino"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <!-- ID -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilIdInquilino"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID"
        app:startIconDrawable="@drawable/ic_info"
        app:startIconTint="@color/purple_500"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_700"
        app:boxStrokeWidthFocused="3dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etIdInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ReadOnlyEditTextStyle"
            android:inputType="number"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divisor 1 -->
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple_200"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tilIdInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNombreInquilino"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="@color/purple_500"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_700"
        app:boxStrokeWidthFocused="3dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNombreInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ReadOnlyEditTextStyle"
            android:inputType="textPersonName"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divisor 2 -->
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple_200"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tilNombreInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apellido -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilApellidoInquilino"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="@color/purple_500"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_700"
        app:boxStrokeWidthFocused="3dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etApellidoInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ReadOnlyEditTextStyle"
            android:inputType="textPersonName"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divisor 3 -->
    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple_200"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tilApellidoInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DNI -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDniInquilino"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DNI"
        app:startIconDrawable="@drawable/ic_info"
        app:startIconTint="@color/purple_500"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_700"
        app:boxStrokeWidthFocused="3dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDniInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ReadOnlyEditTextStyle"
            android:inputType="number"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divisor 4 -->
    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple_200"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tilDniInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Teléfono -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTelefonoInquilino"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Teléfono"
        app:startIconDrawable="@drawable/ic_phone"
        app:startIconTint="@color/purple_500"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_700"
        app:boxStrokeWidthFocused="3dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTelefonoInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ReadOnlyEditTextStyle"
            android:inputType="phone"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divisor 5 -->
    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/purple_200"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tilTelefonoInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmailInquilino"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/purple_500"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxStrokeColor="@color/purple_700"
        app:boxStrokeWidthFocused="3dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ReadOnlyEditTextStyle"
            android:inputType="textEmailAddress"
            android:enabled="false"
            android:textColor="@color/purple_700"
            android:textSize="16sp"
            android:paddingVertical="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>