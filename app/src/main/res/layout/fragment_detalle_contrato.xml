<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".ui.contrato.detalle.DetalleContratoFragment">

    <!-- Título principal centrado -->
    <TextView
        android:id="@+id/tvTituloContrato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Información del contrato"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Código y Estado en horizontal -->
    <TextView
        android:id="@+id/tvCodigoContrato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Código"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTituloContrato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvEstadoContrato"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvEstadoContrato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTituloContrato"
        app:layout_constraintStart_toEndOf="@id/tvCodigoContrato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etCodigoContrato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCodigoContrato"
        app:layout_constraintStart_toStartOf="@id/tvCodigoContrato"
        app:layout_constraintEnd_toEndOf="@id/tvCodigoContrato"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etEstadoContrato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoContrato"
        app:layout_constraintStart_toStartOf="@id/tvEstadoContrato"
        app:layout_constraintEnd_toEndOf="@id/tvEstadoContrato"
        android:layout_marginTop="8dp"/>

    <!-- Fechas de inicio y fin en horizontal -->
    <TextView
        android:id="@+id/tvFechaInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de inicio"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etEstadoContrato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvFechaFin"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvFechaFin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de fin"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etEstadoContrato"
        app:layout_constraintStart_toEndOf="@id/tvFechaInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etFechaInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFechaInicio"
        app:layout_constraintStart_toStartOf="@id/tvFechaInicio"
        app:layout_constraintEnd_toEndOf="@id/tvFechaInicio"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etFechaFin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFechaFin"
        app:layout_constraintStart_toStartOf="@id/tvFechaFin"
        app:layout_constraintEnd_toEndOf="@id/tvFechaFin"
        android:layout_marginTop="8dp"/>

    <!-- Monto -->
    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Monto"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etFechaInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etMonto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMonto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Inquilino -->
    <TextView
        android:id="@+id/tvInquilino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inquilino"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etMonto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etInquilino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Dirección del inmueble -->
    <TextView
        android:id="@+id/tvDireccionInmueble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dirección del inmueble"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etInquilino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etDireccionInmueble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_700"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDireccionInmueble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón Pagos -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPagos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver los Pagos"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_700"
        app:cornerRadius="24dp"
        android:elevation="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etDireccionInmueble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>