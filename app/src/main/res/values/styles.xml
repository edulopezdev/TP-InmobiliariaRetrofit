<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la aplicación, que hereda de MaterialComponents -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Estilo para campos de texto -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Fondo ventana -->
        <item name="android:windowBackground">@color/white</item>

    </style>

    <!-- Estilo para campos en modo de edición - color negro oscuro -->
    <style name="EditableTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#000000</item> <!-- Color negro oscuro -->
        <item name="android:enabled">true</item>
        <item name="android:alpha">1.0</item> <!-- Sin transparencia -->
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
